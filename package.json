{
  "name": "preact-hint",
  "version": "0.1.6",
  "source": "src/index.tsx",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/preact-hint.js",
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css"
  },
  "license": "MIT",
  "description": "Tooltip Component for Preact",
  "homepage": "https://rschristian.github.io/preact-hint",
  "repository": "https://github.com/rschristian/preact-hint",
  "keywords": [
    "preact",
    "hint",
    "tooltip",
    "component"
  ],
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "microbundle -f modern --no-sourcemap && mv dist/preact-hint.css dist/style.css",
    "build:docs": "yarn build && cp dist/{preact-hint.js,style.css} docs/dev && node docs/dev/post-build.js && node docs/dev/twind.processor.js",
    "serve:dev": "sirv docs -p 3000 -D & yarn dev:lib & yarn dev:twind",
    "dev:lib": "microbundle -f modern --no-sourcemap -o docs/dev --watch & chokidar 'docs/dev/preact-hint.js' -c 'node docs/dev/post-build.js'",
    "dev:twind": "chokidar 'docs/dev/index.html' -c 'node docs/dev/twind.processor.js'",
    "format": "prettier '{src,docs}/**/*.{html,css,js}' '*.json' --write"
  },
  "peerDependencies": {
    "preact": "*"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "html-minifier-terser": "^5.1.1",
    "microbundle": "^0.13.3",
    "preact": "^10.5.14",
    "prettier": "^2.3.2",
    "prettier-config-rschristian": "^0.1.1",
    "sirv-cli": "^1.0.12",
    "twind": "^0.16.16",
    "typescript": "^4.3.5"
  },
  "prettier": "prettier-config-rschristian"
}
